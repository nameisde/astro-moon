---
let title__lets = "Let's"
let title__connect = "connect, collaborate"
let title__and = "and"
let title_work = "work together ✨"
let subtitle__looking = "Currently looking for a job as a UI/UX Designer"
let button_getintouch = "Get in touch"
let copyright__illustration = "Illustration by"
let copyright__site = "icon8.com"
let copyright__author = "— Fahfudin Farhan 2022"
---

<div id="footer">
    <div class="asmo__footer">
        <div class="w-full py-14 px-4 lg:px-28 bg-moon-black-900">
            <div class="asmo__description">
                <div class="lg:w-5/12">
                    <div class="asmo__title">
                        <p class="font-clash font-medium text-2xl text-moon-cream-500 lg:text-3xl">
                            {title__lets}
                            <span class="font-clash font-semibold text-2xl lg:text-3xl">
                                {title__connect}
                            </span>
                            {title__and}
                            <span class="font-clash font-medium text-2xl lg:text-3xl">
                                {title_work}
                            </span>
                        </p>
                    </div>
                    <div class="asmo__subtitle">
                        <h4 class="font-medium py-4 pb-8 text-moon-black-700">
                            {subtitle__looking}
                        </h4>
                    </div>
                    <div class="asmo__button">
                        <a href="mailto:fahfudinfarhan@gmail.com">
                            <button class="font-clash font-medium px-4 py-2.5 mr-6 rounded-md border lg:px-6 lg:mr-8 hover:ring-moon-green-900 border-moon-green-800 text-moon-cream-500 bg-moon-green-800 hover:bg-moon-green-900">
                                {button_getintouch}
                            </button>
                        </a>
                    </div>
                </div>
            </div>
            <div class="asmo__copyright">
                <div class="flex flex-wrap justify-between pt-8 lg:pt-16">
                    <div class="font-clash text-moon-cream-500">
                        <h4 class="font-medium">
                            <span>
                                {copyright__illustration}
                                <a href="https://icons8.com">
                                    {copyright__site}
                                </a>
                                {copyright__author}
                            </span>
                        </h4>
                    </div>
                    <div class="asmo__social-icons">
                        <div class="flex items-center gap-4 pt-12 lg:pt-0 text-moon-cream-500">
                            <a href="https://dribbble.com/nameisde">
                                <img class="opacity-50 hover:opacity-100" width="28" src={Astro.resolve("/src/assets/images/dribbble-logo.svg")} alt="dribbble-logo">
                            </a>
                            <a href="https://github.com/nameisde">
                                <img class="opacity-50 hover:opacity-100" width="28" src={Astro.resolve("/src/assets/images/github-logo.svg")} alt="github-logo">
                            </a>
                            <a href="https://www.linkedin.com/in/fahfudin-farhan/">
                                <img class="opacity-50 hover:opacity-100" width="28" src={Astro.resolve("/src/assets/images/linkedin-logo.svg")} alt="linkedin-logo">
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>