---
let title = "Showcases."
let subtitle = "A few latest showcases below designed in the past"
let show = "Show more"
---

<div id="showcases">
    <div class="asmo__showcases">
        <div class="w-full px-4 pt-12 lg:px-28 ">
            <div class="asmo__title">
                <h2
                    class="font-medium font-clash text-3xl text-moon-black-900 lg:text-4xl">
                    {title}
                </h2>
            </div>
            <div class="asmo__subtitle">
                <h4 class="font-medium pt-2 text-moon-black-700">
                    {subtitle}
                </h4>
            </div>
            <div class="asmo__showcases-content">
                <div
                    class="flex flex-wrap pt-6 gap-6 mx-auto lg:pt-8 lg:gap-12">
                    <slot slot="asmo__showcases-content" />
                </div>
            </div>
            <div class="asmo__showcases-button">
                <div class="py-12 flex justify-center">
                    <a href="/showcases">
                        <button class="w-full font-clash font-medium px-8 py-2 hover:ring-2 hover:ring-moon-green-900 border rounded-md text-moon-green-900 border-moon-green-900 hover:text-moon-cream-500 hover:bg-moon-green-900 lg:w-auto">
                            {show}
                        </button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>