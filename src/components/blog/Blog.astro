---
let title = "Blog"
let subtitle = "Some of the articles below were written in the past"
---

<div id="asmo__blog">
    <div class="flex flex-wrap justify-between px-4 py-12 lg:px-28">
        <div class="lg:w-3/12">
            <div class="asmo__title">
                <h2 class="font-clash font-medium pt-2 text-3xl lg:text-4xl text-moon-black-900">
                    {title}
                </h2>
            </div>
            <div class="asmo__subtitle">
                <h4 class="font-medium pt-2 text-moon-black-700">
                    {subtitle}
                </h4>
            </div>
        </div>
        <div class="lg:w-8/12">
            <slot slot="asmo__blog-content" />
        </div>
    </div>
</div>