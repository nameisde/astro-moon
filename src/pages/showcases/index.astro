---
import ShowcasesLayout from '../../layouts/ShowcasesLayout.astro';
import Navbar from '../../components/Navbar.svelte';
import Hero from '../../components/Hero.astro';
import ShowcasesPreview from '../../components/showcases/ShowcasesPreview.astro';
import Footer from '../../components/Footer.astro';

let title = "Showcases"
let description = "The showcases below was designed in the past."
---

<ShowcasesLayout title={title} description={description}>
    <Navbar client:idle slot="navbar" />
    <Hero slot="hero" title={title} description={description}/>
    <ShowcasesPreview slot="showcases" />
    <Footer slot="footer" />
</ShowcasesLayout>