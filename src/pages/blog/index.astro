---
import BlogLayout from '../../layouts/BlogLayout.astro';
import Navbar from '../../components/Navbar.svelte';
import Hero from '../../components/Hero.astro';
import BlogPreview from '../../components/blog/BlogPreview.astro';
import Footer from '../../components/Footer.astro';

let title = "Blog"
let description = "The article below was written in the past."
---

<BlogLayout title={title} description={description}>
    <Navbar client:idle slot="navbar" />
    <Hero slot="hero" title={title} description={description}/>
    <BlogPreview slot="blog" />
    <Footer slot="footer" />
</BlogLayout>