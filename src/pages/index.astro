---
import HomeLayout from '../layouts/HomeLayout.astro';
import Navbar from '../components/Navbar.svelte';
import HeroHome from '../components/HeroHome.astro';
import ProjectsHome from '../components/projects/ProjectsHome.astro';
import ShowcasesHome from '../components/showcases/ShowcasesHome.astro';
import BlogHome from '../components/blog/BlogHome.astro';
import Footer from '../components/Footer.astro';

let title = "Fahfudin Farhan - UI/UX Designer and Mobile Developer"
let description = "Portofolio of Fahfudin Farhan"
let permalink = "https://fahfudinfarhan.com"
---

<HomeLayout title={title} description={description} permalink={permalink}>
    <Navbar client:idle slot="navbar" />
    <HeroHome slot="hero" />
    <ProjectsHome slot="projects" />
    <ShowcasesHome slot="showcases" />
    <BlogHome slot="blog" />
    <Footer slot="footer" />
</HomeLayout>
